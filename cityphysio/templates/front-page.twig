{% extends "base.twig" %}

{% block hero %}
	<div class="relative h-[550px] lg:h-[700px] w-screen bg-brand rounded-b-[50px] lg:rounded-b-[100px] overflow-hidden">
		{% include 'partial/image.twig' with {
            image: Image(fields.home_banner.background).src,
            alt: fields.home_banner.background.alt,
            class: 'object-cover object-top md:object-center w-full h-full absolute top-0 left-0'
        } %}
		<div class="bg-brand bg-opacity-75 absolute top-0 left-0 w-full h-full"></div>
		<div class="relative pt-12 container text-center flex flex-col gap-8 h-full text-white items-center justify-center">
			{% if fields.home_banner.heading %}
				<h1>{{ fields.home_banner.heading }}</h1>
			{% endif %}
			{% if fields.home_banner.subheading %}
				<h2 class="is-h4 font-normal">{{ fields.home_banner.subheading }}</h2>
			{% endif %}
			{% if fields.home_banner.button %}
				<a class="button" href="{{ fields.home_banner.button.url }}">{{ fields.home_banner.button.title }}</a>
			{% endif %}
		</div>
	</div>

{% endblock %}
{% block content %}
	<section class="introduction relative">
		<div class="container flex max-lg:flex-col gap-6 lg:gap-20">
			<div class="block-content w-full">
				{{ fields.home_introduction.content }}
			</div>
			{% if fields.home_introduction.quote %}
				<div class="bg-white lg:w-1/2 border-2 border-brandBlue rounded-3xl p-8 text-xl flex items-center justify-center">
					<em>{{ fields.home_introduction.quote }}</em>
				</div>
			{% endif %}
		</div>
	</section>

	{% include "blocks/links.twig" %}

	<section class="contact">
		<div class="container flex max-md:flex-col gap-6 items-center relative md:mt-10">
			<div class="block-content bg-white p-6 rounded-3xl border-2 border-brandLight w-full md:w-1/2 lg:w-2/5">
				<h4 class="p-6 bg-[#F9F9F9] border-[1px] border-[#DDDDDD] rounded-2xl">Get in touch with us today</h4>
				<div class="flex flex-col gap-2 ml-6">
					<p class="text-xl text-brand font-semibold">Call</p>
					<a class="underline-link" href="tel:{{ options.phone }}">{{ options.phone }}</a>
				</div>
				<div class="flex flex-col gap-2 ml-6">
					<p class="text-xl text-brand font-semibold">Address</p>
					<div>{{ options.address }}</div>
				</div>
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3385.2144494614254!2d115.85433407606126!3d-31.955078422500225!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2a32bad5ec60b1f3%3A0xa64f8a2e90dc8bab!2sCity%20Physiotherapy%20Centre!5e0!3m2!1sen!2sau!4v1687170413068!5m2!1sen!2sau" class="rounded-2xl" width="100%" height="152" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
			{% if fields.home_contact.image %}
				{% include 'partial/image.twig' with {
					image: Image(fields.home_contact.image).src,
					alt: fields.home_contact.image.alt,
					class: 'object-cover object-center md:w-2/3 md:h-[120%] aspect-16/9 md:aspect-4/3 md:absolute md:top-1/2 md:-translate-y-1/2 md:right-10 rounded-2xl -z-10'
				} %}
			{% endif %}
		</div>
	</section>
{% endblock %}
