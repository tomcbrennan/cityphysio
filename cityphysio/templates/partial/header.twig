<header class="container transition-all duration-300 fixed top-4 left-1/2 -translate-x-1/2 z-50">
	<div data-navigation class="px-6 py-4 border-2 border-brandLight rounded-full bg-brand z-20 w-full flex items-center justify-between transition-all duration-300">
		{% if options.company_logo %}
			<a href="{{ site.url }}" rel="home"><img src="{{ options.company_logo.url }}" class="w-20 lg:w-32 h-full object-container" alt=""></a>
		{% endif %}
		<nav id="nav-main" role="navigation" class="flex">
			{% include 'menu.twig' with {
				items: menu.get_items
			} %}
		</nav>
	</div>
</header>
