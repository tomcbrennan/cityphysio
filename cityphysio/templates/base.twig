<!DOCTYPE html>
<!-- [if lt IE 9]><html class="no-js no-svg ie lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif] -->
<!-- [if IE 9]><html class="no-js no-svg ie ie9 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif] -->
<!-- [if gt IE 9]><! -->
	<html
	class="no-js no-svg" {{ site.language_attributes }}> <!-- <![endif] -->
	{% block html_head_container %}
		{% include 'html-header.twig' %}
	{% endblock %}
	<body class="{{ body_class }}" data-template="base.twig" class="min-h-screen">
		<a class="skip-link screen-reader-text" href="#content">{{ _e('Skip to content') }}</a>
		{% block header %}
			{% include 'partial/header.twig' %}
		{% endblock %}
		{% block hero %}
			<div class="internal-banner container">
				<div class="relative container overflow-hidden text-white mt-28 lg:mt-36 bg-[#AAAAAA] w-full h-48 lg:h-64 max-lg:pb-6 py-14 flex items-end rounded-[40px]">
					{% if fields.banner.background %}
						{% include 'partial/image.twig' with {
							image: Image(fields.banner.background).src,
							alt: fields.banner.background.alt,
							class: 'object-cover object-center w-full h-full absolute top-0 left-0'
						} %}
					{% endif %}
					<svg width="100%" height="100%" viewbox="0 0 1512 461" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full absolute top-0 left-0" preserveAspectRatio="none">
						<rect width="1512" height="461" fill="#063E71" fill-opacity="0.8"/>
					</svg>

					<div class="relative w-full">
						{% if fields.banner.custom_heading %}
							<h1>{{ fields.banner.custom_heading }}</h1>
						{% else %}
							<h1>{{ post.title }}</h1>
						{% endif %}
					</div>
				</div>
			</div>
		{% endblock %}
		<main id="content" role="main" class="relative">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</main>
		{% block footer %}
			{% include 'footer.twig' %}

			{{ function('wp_footer') }}
		{% endblock %}

		{# Extend this to add custom scripts to just one page/block #}
		{% block scripts %}{% endblock %}
	</body>
</html>
