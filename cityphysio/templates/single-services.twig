{% extends "page.twig" %}

{% block hero %}
    {% include "partial/service-banner.twig" %}
{% endblock %}

{% block content %}
	<div class="relative">
		{% if page_builder %}
			{% for block in page_builder %}
				<div data-block="{{ block.acf_fc_layout }}">
					{{ include("blocks/" ~ block.acf_fc_layout ~ ".twig", ignore_missing = true) }}
				</div>
			{% endfor %}
		{% else %}
			<section>
				<h3 class="container text-[#D1D1D1]">No content found.</h3>
			</section>
		{% endif %}
	</div>

    <div class="container">
        <a href="/specialised-services#services" class="button mx-auto mt-5 md:mt-10">Back to Services</a>
    </div>

{% endblock %}
